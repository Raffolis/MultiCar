<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MultiCar.Pages.InscricaoPage"
             Title="Cadastro"
             BackgroundColor="#e8e8e8"
             NavigationPage.HasNavigationBar="False">

    <Grid 
        RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, *"
        RowSpacing="10"
        Margin="20,120,20,40">

        <Image
            x:Name="imgLogo"
            Source="logo.png"
            Grid.Row="0"
            Aspect="AspectFit"
            HeightRequest="190"
            WidthRequest="180"/>

        <Label 
            x:Name="lblTitulo"
            Text="Crie sua conta"
            Grid.Row="1"
            FontSize="24"
            FontAttributes="Bold"
            TextColor="#00BF63"
            HorizontalOptions="Center"
            Margin="0,-45,0,0"/>

        <Frame 
            Grid.Row="2" 
            Padding="20" 
            BackgroundColor="#ffffff"
            CornerRadius="10" 
            HasShadow="True" 
            BorderColor="#e0e0e0">

            <VerticalStackLayout 
                Spacing="20">

                <Entry 
                    x:Name="entNome"
                    Placeholder="Nome Completo"
                    BackgroundColor="#f0f0f0"
                    TextColor="#000000" />

                <Entry 
                    x:Name="entEmail"
                    Placeholder="Email"
                    BackgroundColor="#f0f0f0"
                    TextColor="#000000" />

                <Entry 
                    x:Name="entSenha"
                    Placeholder="Senha"
                    BackgroundColor="#f0f0f0"
                    TextColor="#000000"
                    IsPassword="True" />

                <Entry 
                    x:Name="entConfirmarSenha"
                    Placeholder="Confirmar Senha"
                    BackgroundColor="#f0f0f0"
                    TextColor="#000000"
                    IsPassword="True" />

                <Button
                    x:Name="btnCadastrar"
                    Text="Cadastrar"
                    BackgroundColor="#00BF63"
                    TextColor="White"
                    FontSize="18"
                    HeightRequest="50"
                    CornerRadius="150"
                    Clicked="btnCadastrar_Clicked" />

                <Label 
                    HorizontalOptions="Center">
                    
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="JÃ¡ tem uma conta? "/>
                            <Span Text="Entrar"
                                  TextColor="#3685cd"
                                  FontAttributes="Bold" />
                        </FormattedString>
                    </Label.FormattedText>
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer x:Name="tapEntrar"
                                              Tapped="tapEntrar_Tapped" />
                    </Label.GestureRecognizers>
                    
                </Label>
                
            </VerticalStackLayout>
            
        </Frame>
        
    </Grid>
    
</ContentPage>
