<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MultiCar.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MultiCar"
    xmlns:pages="clr-namespace:MultiCar.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="#00BF63"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="LightGray"
    Shell.TabBarForegroundColor="WhiteSmoke"
    Title="MultiCar">

    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate pages:HomePage}"/>
        </Tab>

        <Tab Title="Buscar" Icon="pesquisar.png">
            <ShellContent ContentTemplate="{DataTemplate pages:BuscaPage}"/>
        </Tab>

        <Tab Title="Cadastrar" Icon="add.png">
            <ShellContent ContentTemplate="{DataTemplate pages:CadastroPage}"/>
        </Tab>

        <Tab Title="Perfil" Icon="perfil.png">
            <ShellContent ContentTemplate="{DataTemplate pages:PerfilPage}"/>
        </Tab>
    </TabBar>

</Shell>
